<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/bg_list_adapter_file_manager_item">

    <ImageView
        android:id="@+id/list_adapter_jarvis_file_manager_type_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/jarvis_icon_storage_manager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_adapter_jarvis_file_manager_item_name"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/list_adapter_jarvis_file_manager_item_go_icon"
        app:layout_constraintStart_toEndOf="@+id/list_adapter_jarvis_file_manager_type_img"
        app:layout_constraintTop_toTopOf="parent"
        android:lines="1"/>

    <TextView
        android:id="@+id/list_adapter_jarvis_file_manager_child_file_num"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingLeft="5dp"
        android:text="0é¡¹"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/list_adapter_jarvis_file_manager_item_go_icon"
        app:layout_constraintStart_toEndOf="@+id/list_adapter_jarvis_file_manager_type_img"
        app:layout_constraintTop_toBottomOf="@+id/list_adapter_jarvis_file_manager_item_name" />

    <ImageView
        android:id="@+id/list_adapter_jarvis_file_manager_item_go_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/icon_jarvis_go_to"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
